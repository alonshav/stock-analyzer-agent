{
  "name": "stock-analyzer-mcp",
  "version": "1.0.0",
  "license": "MIT",
  "bin": "./dist/apps/mcp-server/main.js",
  "files": [
    "dist/apps/mcp-server"
  ],
  "scripts": {
    "build:telegram-bot": "nx build telegram-bot --configuration=production --skip-nx-cache",
    "build:agent": "nx build agent --configuration=production --skip-nx-cache",
    "build:mcp-server": "nx build mcp-server --configuration=production && chmod +x dist/apps/mcp-server/main.js",
    "start:telegram-bot": "node dist/apps/telegram-bot/main.js --skip-nx-cache",
    "start:agent": "node dist/apps/agent/main.js --skip-nx-cache",
    "start:mcp-server": "node dist/apps/mcp-server/main.js",
    "start:all": "npm run build:agent && npm run build:telegram-bot && (npm run start:agent & npm run start:telegram-bot)",
    "serve:agent": "nx serve agent",
    "serve:bot": "nx serve telegram-bot",
    "serve:all": "nx run-many --target=serve --projects=agent,telegram-bot --parallel",
    "watch:agent": "nx run agent:build:watch",
    "watch:bot": "nx run telegram-bot:build:watch",
    "dev": "nx run-many --target=serve --all --parallel",
    "test": "nx run-many --target=test --all",
    "lint": "nx run-many --target=lint --all",
    "graph": "nx graph"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.1.10",
    "@modelcontextprotocol/sdk": "^1.17.4",
    "@nestjs/common": "^11.0.0",
    "@nestjs/config": "^4.0.0",
    "@nestjs/core": "^11.0.0",
    "@nestjs/event-emitter": "^3.0.0",
    "@nestjs/platform-express": "^11.0.0",
    "@nestjs/schedule": "^6.0.1",
    "axios": "^1.6.0",
    "dotenv": "^17.2.1",
    "eventsource": "^4.0.0",
    "node-cache": "^5.1.2",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^7.8.0",
    "telegraf": "^4.16.3",
    "tslib": "^2.3.0",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.0",
    "@nx/esbuild": "21.6.3",
    "@nx/eslint": "21.6.3",
    "@nx/eslint-plugin": "21.6.3",
    "@nx/jest": "21.6.3",
    "@nx/js": "21.6.3",
    "@nx/nest": "21.6.3",
    "@nx/node": "21.6.3",
    "@nx/web": "21.6.3",
    "@nx/webpack": "21.6.3",
    "@nx/workspace": "21.6.3",
    "@swc-node/register": "~1.9.1",
    "@swc/core": "~1.5.7",
    "@swc/helpers": "~0.5.11",
    "@types/eventsource": "^1.1.15",
    "@types/jest": "^29.5.12",
    "@types/node": "20.19.9",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^7.16.0",
    "@typescript-eslint/parser": "^7.16.0",
    "esbuild": "^0.19.2",
    "eslint": "~8.57.0",
    "eslint-config-prettier": "^10.0.0",
    "jest": "^29.7.0",
    "jest-environment-node": "^29.7.0",
    "jest-util": "^29.7.0",
    "jsonc-eslint-parser": "^2.1.0",
    "nx": "21.6.3",
    "prettier": "^2.6.2",
    "ts-jest": "^29.1.0",
    "ts-node": "10.9.1",
    "typescript": "~5.5.2",
    "webpack-cli": "^5.1.4"
  }
}
